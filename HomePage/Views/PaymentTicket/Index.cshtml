@model ContentListViewModel

<section class="choose-seat">
    <div class="container">
        <form class="row"
              asp-action="checkoutTicket"
              asp-route-Price="@Model.Price">
            @foreach (var p in Model.Medias)
            {
                <div class="col-md-8">
                    <div class="row">
                        <div class="col-md-12">
                            <ul class="links-list">
                                <li><a  asp-action="index" asp-controller="Home">Home Page</a><span> > </span></li>
                                <li><a href="">book tickets </a> <span> > </span></li>
                                <li><a href="">@p.Movies.Title</a></li>
                            </ul>
                        </div>
                        <div class="col-md-12 limit">
                            <span>
                                @p.Movies.Description
                            </span>
                        </div>
                        <div class="col-md-12 payment-infor">
                            <div class="row">
                                <!--  -->
                                <div class="col-md-12 payment-page-title">
                                    <i class="far fa-user-circle"></i><span>User Information</span>
                                </div>
                                <div class="col-md-12 payment-form">
                                    <div class="row">
                                        <div class="col-md-4 user-info">
                                            <label>Name:</label>
                                            <input type="text"
                                                   name="Name"
                                                   placeholder="Your Name..." />
                                        </div>
                                        <div class="col-md-4 user-info">
                                            <label>Number Phone:</label>
                                            <input type="text"
                                                   name="Phone"
                                                   placeholder="Number Phone..." />
                                        </div>
                                        <div class="col-md-4 user-info">
                                            <label>Email:</label>
                                            <input type="text"
                                                   name="Email"
                                                   placeholder="Email..." />
                                        </div>
                                        <div class="col-md-12 seat-infor">
                                            @if (Model.Basic > 0)
                                            {
                                                <div class="row">
                                                    <div class="col-md-8 total-seat">
                                                        <input class="disable-input" type="text" name="" id="" value="Seat Basic" disabled>
                                                    </div>
                                                    <div class="col-md-2 total-seat"><span>@Model.Basic * $7.36</span></div>
                                                    <div class="col-md-2 total-seat"><input class="disable-input" type="text" name="totalPrice" value="$@(Model.Basic * 7.36)" disabled></div>
                                                </div>
                                            }
                                            @if (Model.Vip > 0)
                                            {
                                                <div class="row">
                                                    <div class="col-md-8 total-seat">
                                                        <input class="disable-input" type="text" name="" id="" value="Seat Vip" disabled>
                                                    </div>
                                                    <div class="col-md-2 total-seat"><span>@Model.Vip * $9</span></div>
                                                    <div class="col-md-2 total-seat"><input class="disable-input" type="text" name="totalPrice" value="$@(Model.Vip * 9)" disabled></div>
                                                </div>
                                            }
                                            @if (Model.Couple > 0)
                                            {
                                                <div class="row">
                                                    <div class="col-md-8 total-seat">
                                                        <input class="disable-input" type="text" name="" id="" value="Seat Couple" disabled>
                                                    </div>
                                                    <div class="col-md-2 total-seat"><span>@Model.Couple * $10.25</span></div>
                                                    <div class="col-md-2 total-seat"><input class="disable-input" type="text" name="totalPrice" value="$@(Model.Couple * 10.25)" disabled></div>
                                                </div>
                                            }
                                        </div>
                                        <div class="col-md-12">
                                            <div class="row">
                                                <div class="col-md-12 mb-3">
                                                    <div class="row">
                                                        <div class="col-md-7"></div>
                                                        <div class="col-md-3 total-title-price">
                                                            <span>Total Price</span>
                                                        </div>
                                                        <div class="col-md-2"><input class="disable-input" type="text" name="totalPrice" value="$@Model.Price" disabled></div>
                                                    </div>
                                                </div>
                                                <div class="col-md-12 mb-3">
                                                    <div class="row">
                                                        <div class="col-md-7"></div>
                                                        <div class="col-md-3 total-title-price">
                                                            <span>Amounts are reduced</span>
                                                        </div>
                                                        <div class="col-md-2">0</div>
                                                    </div>
                                                </div>
                                                <div class="col-md-12 mb-3">
                                                    <div class="row">
                                                        <div class="col-md-7"></div>
                                                        <div class="col-md-3 total-title-price">
                                                            <span>
                                                                Amount to be paid
                                                            </span>
                                                        </div>
                                                        <div class="col-md-2">$@Model.Price</div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="title-card-payment">
                                                <i class="fas fa-money-check"></i>
                                                <span>Payment methods</span>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-4 credit-card">
                                                    <input type="radio" value="1" name="medthod">
                                                    <i class="far fa-credit-card"></i>
                                                    <spam>Payment</spam>
                                                </div>
                                                <div class="col-md-4 credit-card">
                                                    <input type="radio" value="2" name="medthod">
                                                    <i class="fab fa-cc-amazon-pay"></i>
                                                    <spam>AirPay</spam>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <div class="col-md-4 movie-ticket-page">
                <div class="row">
                    @foreach (var p in Model.Medias)
                    {
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-6">
                                    <img src="~/images/@p.Url" style="width: 100%" alt="" />
                                </div>
                                <div class="col-md-6">
                                    <a href="" style="font-weight: bold; text-transform: uppercase; font-size: 14px; color: #1786c3;">@p.Movies.Title</a>
                                    <p>2D subtitles</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <ul class="list-unstyled">
                                <li>
                                    <div class="row">
                                        <div class="col-md-6 title-tickit">
                                            <i class="fas fa-tags"></i>Gerne
                                        </div>
                                        <div class="col-md-6">
                                            <span class="content-tickit">
                                                @p.Movies.Genre
                                            </span>
                                        </div>
                                    </div>
                                </li>
                                <li>
                                    <div class="row">
                                        <div class="col-md-6 title-tickit">
                                            <i class="far fa-clock"></i>Duration
                                        </div>
                                        <div class="col-md-6">
                                            <span class="content-tickit">@p.Movies.Duration</span>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-12">
                            <hr class="border-dashed border-top-2" />
                        </div>
                    }
                    @foreach (var p in Model.Shows)
                    {
                        <input type="text" name="ShowID" value="@p.ShowID" hidden/>
                        <div class="col-md-12">
                            <ul class="list-unstyled">
                                <li>
                                    <div class="row">
                                        <div class="col-md-6 title-tickit">
                                            <i class="fas fa-university"></i>Cinema
                                        </div>
                                        <div class="col-md-6">
                                            <span class="content-tickit">Beta Cineplex</span>
                                        </div>
                                    </div>
                                </li>
                                <li>
                                    <div class="row">
                                        <div class="col-md-6 title-tickit">
                                            <i class="far fa-calendar-alt"></i>Show Date
                                        </div>
                                        <div class="col-md-6">
                                            <span class="content-tickit">@p.StartTime.DayOfYear</span>
                                        </div>
                                    </div>
                                </li>
                                <li>
                                    <div class="row">
                                        <div class="col-md-6 title-tickit">
                                            <i class="far fa-clock"></i>Start Times
                                        </div>
                                        <div class="col-md-6">
                                            <span class="content-tickit">@p.StartTime.TimeOfDay minutes</span>
                                        </div>
                                    </div>
                                </li>
                                <li>
                                    <div class="row">
                                        <div class="col-md-6 title-tickit">
                                            <i class="fas fa-desktop"></i>Cinema Room
                                        </div>
                                        <div class="col-md-6">
                                            <span class="content-tickit">@p.CinemaHall.Name</span>
                                        </div>
                                    </div>
                                </li>
                                <li></li>
                                <li>
                                    <div class="row">
                                        <div class="col-md-6 title-tickit">
                                            <i class="fas fa-cubes"></i>Seat
                                        </div>
                                        <div class="col-md-6">
                                            <span class="content-tickit"></span>
                                        </div>
                                    </div>
                                </li>
                                <li>
                                    <div class="row">
                                        <div class="col-md-12 submit-ticket">
                                            <button type="submit" id="submit" class="buy-ticket">
                                                <span>
                                                    <i class="fas fa-ticket-alt"></i>
                                                </span>
                                                Buy Ticket
                                            </button>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    }
                </div>
            </div>
        </form>
    </div>
</section>