@model PageAdmin.Models.Movie

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Movie</h4>
    <hr />
    <div class="card-content">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Latest Transaction</h4>
                <div class="table-responsive">
                    <table>
                        <thead>
                            <tr>
                                <th>Title</th>
                                @*<th>Description</th>*@
                                <th>Cast</th>
                                <th>Country</th>
                                <th>Director</th>
                                <th>Duration</th>
                                <th>Language</th>
                                <th>Genre</th>
                                <th>ReleaseDate</th>
                                <th>Status</th>
                                <th>Trailer</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@Html.DisplayFor(model => model.Title)</td>

                                @*<td>@Html.DisplayFor(model => model.Description)</td>*@
                                <td>
                                    @Html.DisplayFor(model => model.Cast)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.Country)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.Director)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.Duration) minute
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.Language)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.Genre)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.ReleaseDate)
                                </td>
                                <td>
                                    @if (Model.Status == 1)
                                    {
                                        <span>Now Showing</span>
                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.Trailer)
                                </td>
                            </tr>
                        </tbody>
                    </table>

                </div>

            </div>
            <div>
                <h3 style=" font-size: 20px; padding: 20px; text-decoration: underline;">Desciption</h3>
                <p style=" padding: 10px 20px;">@Html.DisplayFor(model => model.Description)</p>
            </div>
        </div>
        <div style="padding: 21px; margin-top: 10px">
            <form asp-action="Delete">
                <input type="hidden" asp-for="MovieID" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="create-product" style="margin-left: 20px">Back to List</a>
            </form>
        </div>
    </div>

</div>


