@model PageAdmin.Models.Movie

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Movie</h4>
<hr />

<div class="container-fuild">
    <div class="page-title">
        <div class="title__dashboard">
            <p>Create Shop</p>
        </div>
        <div class="title__dashboardchild">
            <a href="#">Ecommerce</a>
            <span>/</span>
            <p>Product</p>
        </div>
    </div>
    <div class="add-product">
        <h4 class="add-product__title">Basic Information</h4>
        <p class="add-product__desc">Fill all information below</p>
        <form asp-action="Edit" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-sm-6">
                    <input type="hidden" asp-for="MovieID" />
                    <div class="form-group">
                        <label class="control-label" asp-for="Title"></label>
                        <input type="text"
                               asp-for="Title"
                               class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <input type="text"
                               asp-for="Description"
                               class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Trailer"></label>
                        <input type="text"
                               asp-for="Trailer"
                               class="form-control" />
                        <span asp-validation-for="Trailer" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Director"></label>
                        <input type="text" asp-for="Director" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Duration"></label>
                        <input type="text" asp-for="Duration" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Language"></label>
                        <input type="text" asp-for="Language" class="form-control" />
                    </div>
                    
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label asp-for="Genre"></label>
                        <input type="text" asp-for="Genre" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Cast"></label>
                        <input type="text" asp-for="Cast" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="ReleaseDate"></label>
                        <input type="text" asp-for="ReleaseDate" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Country"></label>
                        <input type="text" asp-for="Country" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Status"></label>
                        <input type="text" asp-for="Status" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Image</label>
                        <div class="custom-file">
                            <input name="file" type="file" class="custom-file-input" id="customFile">
                            <label class="custom-file-label" for="customFile">Choose file</label>
                        </div>
                        @*<span asp-validation-for="Media" class="text-danger"></span>*@
                    </div>
                </div>
            </div>
            <button type="submit" class="create-product">Save Changes</button>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
