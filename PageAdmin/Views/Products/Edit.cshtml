@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


<div class="container-fuild">
    <div class="page-title">
        <div class="title__dashboard">
            <p>Create Shop</p>
        </div>
        <div class="title__dashboardchild">
            <a href="#">Ecommerce</a>
            <span>/</span>
            <p>Product</p>
        </div>
    </div>
    <div class="add-product">
        <h4 class="add-product__title">Basic Information</h4>
        <p class="add-product__desc">Fill all information below</p>
        <form asp-action="Edit">
            <div class="row">
                <div class="col-sm-6">
                    <input type="hidden" asp-for="ProductID" />
                    <div class="form-group">
                        <label class="control-label" asp-for="ProductName"></label>
                        <input type="text"
                               asp-for="ProductName"
                               class="form-control" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductLike"></label>
                        <input type="text"
                               asp-for="ProductLike"
                               class="form-control" />
                        <span asp-validation-for="ProductLike" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label asp-for="ShopID"></label>
                        <select asp-for="ShopID" class="form-control product-category" asp-items="ViewBag.ShopID"></select>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Image</label>
                        <div class="custom-file">
                            <input name="file" type="file" class="custom-file-input" id="customFile">
                            <label class="custom-file-label" for="customFile">Choose file</label>
                        </div>
                        @*<span asp-validation-for="Media" class="text-danger"></span>*@
                    </div>
                </div>
            </div>
            <button type="submit" class="create-product">Save Changes</button>
        </form>
    </div>
</div>