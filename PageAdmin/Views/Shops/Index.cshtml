@model PageAdmin.Models.ViewModels.ShopListViewModel

<div class="content">
    <div class="page-content">
        <div class="container-fuild">
            <div class="page-title">
                <div class="title__dashboard">
                    <h3>Shops</h3>
                </div>
                <div class="title__dashboardchild">
                    <a href="#">Ecommerce</a>
                    <span>/</span>
                    <p>Shop</p>
                </div>
            </div>
            <p>
                <a asp-action="Create" class="btn create-product">Create New</a>
            </p>
            <div class="product-content">
                <div class="filter">
                    <div>
                        <h5>
                            <a style="color:black" asp-action="Index" asp-controller="Shops"
                               asp-route-category=""
                               asp-route-productPage="1">
                                Category
                            </a>
                        </h5>
                        <ul class="product-list">
                            @foreach (var item in Model.Categories)
                            {
                                <li>
                                    <a style="padding-left:20px"
                                       asp-action="Index" asp-controller="Shops"
                                       asp-route-category="@item.CategoryName"
                                       asp-route-productPage="1">
                                        <i class="@item.CategoryIcon"></i>
                                        @item.CategoryName
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
                <div class="clothes">
                    <div class="head-clothes">
                        <div class="title-clothes">
                            <p>Clothes</p>
                        </div>
                        <div class="style-clothes">
                            <form action="" class="form-search__clothes">
                                <input type="text" placeholder="Search..." />
                                <span><i class="fas fa-search"></i></span>
                            </form>
                        </div>
                    </div>
                    <div class="card-content">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Latest Transaction</h4>
                                <div class="table-responsive">
                                    <table>
                                        <thead>
                                            <tr>
                                                <th>Name</th>
                                                <th>Location</th>
                                                <th>OpenTime</th>
                                                <th>Contact</th>
                                                <th>Categories</th>
                                                <th>Method</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.Shop)
                                            {
                                                <tr>
                                                    <td> <a asp-action="Edit" asp-route-id="@item.ShopID">@Html.DisplayFor(modelItem => item.ShopName)</a></td>

                                                    <td>@Html.DisplayFor(modelItem => item.ShopLocation)</td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.ShopOpenTime)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.ShopContact)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Categories.CategoryName)
                                                    </td>
                                                    <td style="display: flex;justify-content:space-between;align-items: center">
                                                        <a class="view-detail" asp-action="Details" asp-route-id="@item.ShopID">Detail</a>
                                                        <a class="success-brd"asp-action="Edit" asp-route-id="@item.ShopID">Edit</a>
                                                        <a class="warning-brd" asp-action="Delete" asp-route-id="@item.ShopID">Delete</a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>





