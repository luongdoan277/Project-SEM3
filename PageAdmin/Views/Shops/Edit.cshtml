@model PageAdmin.Models.ViewModels.ShopListViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Shop</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="Shops" enctype="multipart/form-data" method="post">
            <input type="hidden" asp-for="Shops.ShopID" />
            <div class="form-group">
                <label asp-for="Shops.ShopName" class="control-label"></label>
                <input asp-for="Shops.ShopName" class="form-control" />
                <span asp-validation-for="Shops.ShopName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shops.ShopLocation" class="control-label"></label>
                <input asp-for="Shops.ShopLocation" class="form-control" />
                <span asp-validation-for="Shops.ShopLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shops.ShopOpenTime" class="control-label"></label>
                <input asp-for="Shops.ShopOpenTime" class="form-control" />
                <span asp-validation-for="Shops.ShopOpenTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shops.ShopContact" class="control-label"></label>
                <input asp-for="Shops.ShopContact" class="form-control" />
                <span asp-validation-for="Shops.ShopContact" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shops.CategoryID" class="control-label"></label>
                <select asp-for="Shops.CategoryID" class="form-control" asp-items="ViewBag.CategoryID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Shops.ShopAbout" class="control-label"></label>
                <input asp-for="Shops.ShopAbout" class="form-control" />
                <span asp-validation-for="Shops.ShopAbout" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Image</label>
                <div class="custom-file">
                    <input name="file" type="file" class="custom-file-input" id="customFile">
                    <label class="custom-file-label" for="customFile">Choose file</label>
                </div>
                @*<span asp-validation-for="Media" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
