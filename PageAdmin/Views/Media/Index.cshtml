@model IEnumerable<PageAdmin.Models.Media>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="create-product">Create New</a>
</p>

<div class="card-content">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Latest Transaction</h4>
            <div class="table-responsive">
                <table>
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Url)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Shops)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Movie)
                            </th>
                            <th>
                                Methods
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td> <img src="~/images/@item.Url" alt="Alternate Text" style="height: 70px"/></td>

                                <td>@Html.DisplayFor(modelItem => item.Shops.ShopName)</td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Movie.Title)
                                </td>
                                <td style="display: flex;justify-content:space-between;align-items: center">
                                    <a class="view-detail" asp-action="Details" asp-route-id="@item.MediaID">Detail</a>
                                    <a class="success-brd" asp-action="Edit" asp-route-id="@item.MediaID">Edit</a>
                                    <a class="warning-brd" asp-action="Delete" asp-route-id="@item.MediaID">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


