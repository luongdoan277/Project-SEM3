@model PageAdmin.Models.Media

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<hr />

<div class="container-fuild">
    <div class="page-title">
        <div class="title__dashboard">
            <p>Create Media</p>
        </div>
        <div class="title__dashboardchild">
            <a href="#">Ecommerce</a>
            <span>/</span>
            <p>Product</p>
        </div>
    </div>
    <div class="add-product">
        <h4 class="add-product__title">Basic Information</h4>
        <p class="add-product__desc">Fill all information below</p>
        <form asp-action="Create" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Shop</label>
                        <select asp-for="ShopID" class="form-control product-category">
                            <option value="">--Please choose an option--</option>
                            @foreach (var o in ViewBag.ShopID)
                            {
                                <option value="@o.ShopID">@o.ShopName</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Movie</label>
                        <select asp-for="MovieID" class="form-control product-category">
                            <option value="">--Please choose an option--</option>
                            @foreach (var o in ViewBag.MovieID)
                            {
                                <option value="@o.MovieID">@o.Title</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Product</label>
                        <select asp-for="ProductID" class="form-control product-category">
                            <option value="">--Please choose an option--</option>
                            @foreach (var o in ViewBag.ProductID)
                            {
                                <option value="@o.ProductID">@o.ProductName</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Image</label>
                        <div class="custom-file">
                            <input name="file" type="file" class="custom-file-input" id="customFile">
                            <label class="custom-file-label" for="customFile">Choose file</label>
                        </div>
                        @*<span asp-validation-for="Media" class="text-danger"></span>*@
                    </div>
                </div>
            </div>
            <button type="submit" class="create-product">Save Changes</button>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
