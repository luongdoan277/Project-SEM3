@model PageAdmin.Models.Category

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Category</h4>
<hr />

<div class="container-fuild">
    <div class="page-title">
        <div class="title__dashboard">
            <p>Create product</p>
        </div>
        <div class="title__dashboardchild">
            <a href="#">Ecommerce</a>
            <span>/</span>
            <p>Product</p>
        </div>
    </div>
    <div class="add-product">
        <h4 class="add-product__title">Basic Information</h4>
        <p class="add-product__desc">Fill all information below</p>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="control-label" asp-for="CategoryName"></label>
                        <input type="text"
                               asp-for="CategoryName"
                               class="form-control" />
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CategoryIcon"></label>
                        <input type="text"
                               asp-for="CategoryIcon"
                               class="form-control" />
                        <span asp-validation-for="CategoryIcon" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label asp-for="CategoryImage" class="control-label"></label>
                        <input asp-for="CategoryImage" class="form-control" />
                        <span asp-validation-for="CategoryImage" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <button type="submit" class="create-product">Save Changes</button>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
