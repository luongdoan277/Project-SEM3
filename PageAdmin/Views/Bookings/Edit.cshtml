@model PageAdmin.Models.Booking

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BookingID" />
            <div class="form-group">
                <label asp-for="NumberOfSeat" class="control-label"></label>
                <input asp-for="NumberOfSeat" class="form-control" />
                <span asp-validation-for="NumberOfSeat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Timestamp" class="control-label"></label>
                <input asp-for="Timestamp" class="form-control" />
                <span asp-validation-for="Timestamp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserBookingID" class="control-label"></label>
                <select asp-for="UserBookingID" class="form-control" asp-items="ViewBag.UserBookingID"></select>
                <span asp-validation-for="UserBookingID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShowID" class="control-label"></label>
                <select asp-for="ShowID" class="form-control" asp-items="ViewBag.ShowID"></select>
                <span asp-validation-for="ShowID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
