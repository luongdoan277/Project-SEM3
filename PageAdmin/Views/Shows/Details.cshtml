@model PageAdmin.Models.Show

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Show</h4>
    <hr />
    <div class="card-content">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Latest Transaction</h4>
                <div class="table-responsive">
                    <table>
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>StartTime</th>
                                <th>EndTime</th>
                                <th>CinemaHall</th>
                                <th>Movie</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@Html.DisplayFor(model => model.Date)</td>

                                <td>@Html.DisplayFor(model => model.StartTime.TimeOfDay)</td>
                                <td>
                                    @Html.DisplayFor(model => model.EndTime.TimeOfDay)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.CinemaHall.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.Movie.Title)
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div style="padding: 21px; margin-top: 10px">
            <a asp-action="Edit" asp-route-id="@Model.MovieID" class="btn btn-danger">Edit</a>
            <a asp-action="Index" class="create-product" style="margin-left: 20px">Back to List</a>
        </div>
    </div>

</div>

